@model IEnumerable<ProductDto>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Products List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row mb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Product</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th class=" text-white">
                            Name
                        </th>
                        <th class="text-white text-center">
                            Category Name
                        </th>
                        <th class="text-white text-center">
                            Price
                        </th>
                        <th class="text-white text-center">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-info">
                                @item.Name
                            </td>
                            <td class="text-primary text-center">
                                @item.CategoryName
                            </td>
                            <td class="text-success text-center">
                                @((item.Price).ToString("c"))
                            </td>
                            <td class="text-center text-center">
                                <a class="btn btn-success" asp-action="ProductEdit" asp-route-productId="@item.ProductId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger text-center" asp-action="ProductDelete" asp-route-productId="@item.ProductId">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
